<h1>Editing Book</h1>

 <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

<%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>
  <p><%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Back",book_path(@book.id) %></p>
<% end %>