<h1>Editing Book</h1>

 <% flash[:notice] %>

  
  <% if @book.errors.any? %>
<%= @book.errors.count %>error occurred and could not be updated
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>


<%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>
  <p><%= link_to "Show", book_path(@book.id) %>
    <%= link_to "Back",books_path %></p>
<% end %>