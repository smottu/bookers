<h1>新規投稿</h1>

<% if @book.errors.any? %>
 <%= @book.errors.count %>errors occurred
 <ul>
    <%@book.errors.full_message.each do |message| %>
    <li><%=message %></li>
    <% end %>
 </ul>
<% end %>

<%= form_with model: @book, url:'/books',method: :post do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    
    <h4>本文</h4>
    <%= f.text_area :body %>
    
    <%= f.submit '投稿' %>
<% end %>

